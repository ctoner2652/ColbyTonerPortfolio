<script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    function runTypedSequence() {
      const typedElement = document.querySelector("#typed");
      const step1 = new Typed("#typed", {
        strings: ["Hey, I'm <span class='text-blue-400'>Colby.</span>"],
        typeSpeed: 60,
        backSpeed: 30,
        backDelay: 1000,
        startDelay: 500,
        showCursor: true,
        smartBackspace: false,
        loop: false,
        contentType: "html",
        onComplete: () => {
          setTimeout(() => {
            step1.destroy();
            const step2 = new Typed("#typed", {
              strings: ["I am super awe-", "I’m a <span class='text-blue-400'>full stack developer.</span>"],
              typeSpeed: 60,
              backSpeed: 80,
              backDelay: 200,
              showCursor: true,
              smartBackspace: false,
              loop: false,
              contentType: "html",
              onComplete: () => {
                setTimeout(() => {
                  step2.destroy();
                  runTypedSequence();
                }, 1500);
              }
            });
          }, 1000); 
        }
      });
    }
    runTypedSequence();
  });
</script>

